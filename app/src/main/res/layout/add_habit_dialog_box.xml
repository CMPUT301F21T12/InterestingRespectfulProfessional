<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/habit_add_button">

    <EditText
        android:id="@+id/habit_title_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="24dp"
        android:autofillHints="habit"
        android:background="@color/white"
        android:ems="10"
        android:hint="@string/habit_title"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/habit_name_text_view"
        app:layout_constraintTop_toBottomOf="@+id/add_habit_header"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/habit_reason_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:autofillHints="reason"
        android:background="@color/white"
        android:ems="10"
        android:hint="@string/habit_reason"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/habit_title_edit_text"
        app:layout_constraintTop_toBottomOf="@+id/habit_title_edit_text"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/confirm_habit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@color/habit_list_text"
        android:text="@string/confirm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/habit_date_selection"
        app:layout_constraintTop_toBottomOf="@+id/thursday_button" />

    <Button
        android:id="@+id/cancel_habit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@color/habit_list_text"
        android:text="@string/cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/confirm_habit"
        app:layout_constraintTop_toBottomOf="@+id/saturday_button" />

    <TextView
        android:id="@+id/habit_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/name"
        app:layout_constraintBottom_toBottomOf="@+id/habit_title_edit_text"
        app:layout_constraintEnd_toStartOf="@+id/habit_title_edit_text"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/habit_title_edit_text" />

    <TextView
        android:id="@+id/habit_reason_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reason"
        app:layout_constraintBottom_toBottomOf="@+id/habit_reason_edit_text"
        app:layout_constraintEnd_toStartOf="@+id/habit_reason_edit_text"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/habit_name_text_view"
        app:layout_constraintTop_toTopOf="@+id/habit_reason_edit_text" />

    <TextView
        android:id="@+id/habit_date_text_view"
        android:layout_width="70dp"
        android:layout_height="24dp"
        android:text="@string/date_start"
        app:layout_constraintBottom_toBottomOf="@+id/habit_date_selection"
        app:layout_constraintEnd_toStartOf="@+id/habit_date_selection"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/habit_reason_text_view"
        app:layout_constraintTop_toTopOf="@+id/habit_date_selection" />

    <TextView
        android:id="@+id/add_habit_header"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:gravity="center"
        android:text="@string/add_habit"
        android:textSize="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/habit_date_selection"
        android:layout_width="208dp"
        android:layout_height="27dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:background="@color/white"
        android:clickable="true"
        android:hint="@string/habit_date"
        android:onClick="onClick"
        android:textColor="@color/grey"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/habit_reason_edit_text"
        app:layout_constraintTop_toBottomOf="@+id/habit_reason_edit_text" />

    <TextView
        android:id="@+id/weekly_schedule_header"
        android:layout_width="132dp"
        android:layout_height="23dp"
        android:layout_marginTop="24dp"
        android:text="Weekly Schedule"
        app:layout_constraintStart_toStartOf="@+id/habit_date_text_view"
        app:layout_constraintTop_toBottomOf="@+id/habit_date_text_view" />

    <CheckBox
        android:id="@+id/monday_button"
        style="@style/Widget.AppCompat.CompoundButton.CheckBox"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:autoSizeMaxTextSize="36dp"
        android:autoSizeMinTextSize="6dp"
        android:autoSizeStepGranularity="2dp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/day_button"
        android:button="@null"
        android:elevation="5dp"
        android:enabled="true"
        android:paddingLeft="8sp"
        android:paddingRight="8sp"
        android:text="Mo"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weekly_schedule_header" />

    <CheckBox
        android:id="@+id/tuesday_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:autoSizeMaxTextSize="32dp"
        android:autoSizeMinTextSize="6dp"
        android:autoSizeStepGranularity="2dp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/day_button"
        android:button="@null"
        android:elevation="5dp"
        android:enabled="true"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        android:text="Tu"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/monday_button"
        app:layout_constraintTop_toBottomOf="@+id/weekly_schedule_header" />

    <CheckBox
        android:id="@+id/wednesday_button"
        style="@style/day_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:autoSizeMaxTextSize="30dp"
        android:autoSizeMinTextSize="6dp"
        android:autoSizeStepGranularity="2dp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/day_button"
        android:button="@null"
        android:elevation="5dp"
        android:enabled="true"
        android:paddingLeft="8sp"
        android:paddingRight="8sp"
        android:text="We"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/tuesday_button"
        app:layout_constraintTop_toBottomOf="@+id/weekly_schedule_header" />

    <CheckBox
        android:id="@+id/thursday_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:autoSizeMaxTextSize="30dp"
        android:autoSizeMinTextSize="6dp"
        android:autoSizeStepGranularity="2dp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/day_button"
        android:button="@null"
        android:elevation="5dp"
        android:enabled="true"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        android:text="Th"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/wednesday_button"
        app:layout_constraintTop_toBottomOf="@+id/weekly_schedule_header" />

    <CheckBox
        android:id="@+id/friday_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:autoSizeMaxTextSize="20dp"
        android:autoSizeMinTextSize="6dp"
        android:autoSizeStepGranularity="1dp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/day_button"
        android:button="@null"
        android:elevation="5dp"
        android:enabled="true"
        android:paddingLeft="13sp"
        android:paddingRight="13sp"
        android:text="Fr"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/thursday_button"
        app:layout_constraintTop_toBottomOf="@+id/weekly_schedule_header" />

    <CheckBox
        android:id="@+id/saturday_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:autoSizeMaxTextSize="30dp"
        android:autoSizeMinTextSize="6dp"
        android:autoSizeStepGranularity="2dp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/day_button"
        android:button="@null"
        android:elevation="5dp"
        android:enabled="true"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        android:text="Sa"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/friday_button"
        app:layout_constraintTop_toBottomOf="@+id/weekly_schedule_header" />

    <CheckBox
        android:id="@+id/sunday_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_weight="1"
        android:autoSizeMaxTextSize="30dp"
        android:autoSizeMinTextSize="6dp"
        android:autoSizeStepGranularity="2dp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/day_button"
        android:button="@null"
        android:elevation="5dp"
        android:enabled="true"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        android:text="Su"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/saturday_button"
        app:layout_constraintTop_toBottomOf="@+id/weekly_schedule_header" />

</androidx.constraintlayout.widget.ConstraintLayout>